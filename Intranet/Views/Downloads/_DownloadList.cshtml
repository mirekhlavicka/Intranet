@using Intranet.Utils
@model IEnumerable<Intranet.Models.DownloadViewModel>

<table class="table table-hover table-bordered">
    <thead>
        <tr class="info">
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th width="140x">
                @Html.DisplayNameFor(model => model.date)
            </th>
            <th width="140px">
                @Html.DisplayNameFor(model => model.course_code_name)
            </th>
            <th>
                Soubor
            </th>
            <th width="110px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <th>
                    @Html.Raw(item.title)
                </th>
                <td>
                    @Html.Raw(item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.course_code_name)
                </td>
                <td align="center">
                    <a href="/download.aspx?id_file=@item.id_file">
                        <img src="@item.ThumbNailPath" style="max-width:32px; max-height:32px" /><br />
                        @Html.DisplayFor(modelItem => item.File.name)
                    </a>
                </td>
                <td>
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Upravit", "Edit", "Downloads", routeValues: new { id = item.id_item }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                    &nbsp;
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Smazat", "Delete", "Downloads", routeValues: new { id = item.id_item }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
