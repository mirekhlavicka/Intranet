@model IEnumerable<IntranetPublic.Models.CourseViewModel>

@{
    ViewBag.Title = "Kurzy";
}

<div class="panel panel-default well well-sm" style="margin-top:5px;margin-bottom:5px">
    <div class="panel-body" style="padding:5px">
        <div class="row">
            <div class="form-group col-md-3">
                <label class="control-label" for="ddlSort"><span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span> Řadit podle:</label>

                @Html.DropDownList("ddlSort", new SelectListItem[] {
                    new SelectListItem { Text = "Názvu", Value = "0", Selected = true},
                    new SelectListItem { Text = "Kódu", Value = "1"},
                    new SelectListItem { Text = "Semestru", Value = "2"}
                },
                htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="form-group col-md-3">
                <label class="control-label" for="ddlFilter"><span class="glyphicon glyphicon-filter" aria-hidden="true"></span> Semestr:</label>

                @Html.DropDownList("ddlFilter", new SelectListItem[] {
                    new SelectListItem { Text = "Nerozhoduje", Value = "", Selected = true},
                    new SelectListItem { Text = "Zimní", Value = "z"},
                    new SelectListItem { Text = "Letní", Value = "l"}
                },
                htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="form-group col-md-6">
                <label class="control-label" for="tbSearch"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Hledat:</label>
                @Html.TextBox("tbSearch", "", htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

    </div>
</div>

<div id="courseList" class="panel panel-default" style="height:500px; overflow-y:scroll; padding-top:1px; padding-left:1px; margin-bottom: 0px">
    @{ Html.RenderPartial("_CourseList", Model); }
</div>

@section Scripts {

    <script type="text/javascript">

        var refresh = function () {
            $.post('@Url.Action("Index")',
                {
                    sort: $('#ddlSort').val(),
                    filter: $('#ddlFilter').val(),
                    search: $('#tbSearch').val()
                }, function (data) {
                    $('#courseList').html(data);
                });
        }

        var resizeCourseList = function () { $('#courseList').css('height', window.innerHeight - $('#courseList').offset().top - 115) };

        $(function () {

            $('#ddlSort').change(refresh);
            $('#ddlFilter').change(refresh);
            $('#tbSearch').keyup(refresh);

            $(window).resize(resizeCourseList);

        });

        resizeCourseList();
    </script>
}